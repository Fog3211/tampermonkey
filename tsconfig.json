{
  "compilerOptions": {
    "pretty": true,
    "strict": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "esnext",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "client/*": [
        "./client/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "scripts"
  ]
}
